<%- include('partials/header') %>
<div class="container mt-5">
  <h1>Register</h1>
<%-  include('partials/messages') %>
  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <form action="/users/register" method="POST">
            <div class="form-group">
              <label for="e">Name</label>
              <input type="text" class="form-control" id="name" name="name" value="<%= typeof name != 'undefined' ? name: '' %>">
            </div>
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" id="email" name="username" value="<%= typeof email != 'undefined' ? email: '' %>">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" id="password" name="password" value="<%= typeof password != 'undefined' ? password: '' %>">
            </div>
            <div class="form-group">
              <label for="password2">Confirm Password</label>
              <input type="password" class="form-control" id="password2" name="password2" value="<%= typeof password2 != 'undefined' ? password2: '' %>">
            </div>
            <button type="submit" class="btn btn-dark">Register</button>
          </form>

        </div>
      </div>
    </div>

